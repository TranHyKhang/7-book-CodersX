extends ../layouts/common

block content
    h1 Transaction
    a.mb-3(class="btn btn-primary mt-2", href="/transactions/create") New transaction
    table.table  
        tr
            th User
            th Book Borrowed
        each tran in trans
            tr
                td=tran.userName
                td=tran.bookName
                td     
                    a(class="btn btn-primary mt-2", href="/transactions/" + tran.idBorrowed + "/complete") Complete
                td
                    a(class="btn btn-primary mt-2", href="/transactions/" + tran.idBorrowed + "/delete") Delete

    a(class="btn btn-primary mt-2", href="/") Back