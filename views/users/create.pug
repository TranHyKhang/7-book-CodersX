extends ../layouts/common

block content
    h1 Create users
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
        label(for="name") Name
        input#name.form-control(type="text", name="name", value= values ? values.name : "")

        .form-group
        label(for="phone") Phone
        input#phone.form-control(type="text", name="phone", value= values ? values.phone : "")
        .form-group
        label(for="avatar") Avatar
        input#avatar.form-control-file(type="file", name="avatar")

        .form-group
        label(for="email") email
        input#email.form-control(type="text", name="email", value= values ? values.email : "")

        .form-group
        label(for="password") password
        input#password.form-control(type="text", name="password", value= values ? values.password : "")
        button.mt-3(class="btn btn-primary ml-2") Create
