extends ../layouts/common

block content
    h1 Users
    .d-flex.align-items-center
        a.mb-4(class="btn btn-primary mt-2", href="/users/create") New user
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary ml-2") Search

    table.table 
        tr 
            th Name
            th Phone
        each user in users
            tr 
                td= user.name
                td= user.phone 
                td
                    a(class="btn btn-primary mt-2", href="/users/" + user.id + "/delete") Delete
                td
                    a(class="btn btn-primary mt-2", href="/users/"+ user.id + "/update") Update

    a(class="btn btn-primary mt-2", href="/") Back

            